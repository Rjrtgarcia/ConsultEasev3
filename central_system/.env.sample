# ConsultEase Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=ConsultEase
DEBUG_MODE=True
TOUCHSCREEN_ENABLED=False
KEYBOARD_ENABLED=True
THEME=Dark

# Database Settings
DB_TYPE=firebase
DB_URL=https://your-firebase-rtdb.firebaseio.com/
DB_API_KEY=your-api-key-here

# MQTT Settings
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_CLIENT_ID=central_system
MQTT_USERNAME=your-username
MQTT_PASSWORD=your-password

# Hardware Settings
RFID_SIMULATION=True
RFID_PORT=COM3

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True
