# ConsultEase - Configuration File

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com
FIREBASE_REGION=your-region
FIREBASE_SERVICE_ACCOUNT=firebase_key.json

# MQTT Configuration
MQTT_BROKER=your-mqtt-broker.com  # Use your own MQTT broker (not public brokers) for production
MQTT_PORT=1883
MQTT_CLIENT_ID=central_system
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password

# Hardware Configuration
RFID_SIMULATION_MODE=True  # Set to False when RFID reader is connected
RFID_VENDOR_ID=08FF  # Common RFID reader vendor ID (change to match your hardware)
RFID_PRODUCT_ID=0009  # Common RFID reader product ID (change to match your hardware)
TOUCHSCREEN_ENABLED=True
TOUCHSCREEN_RESOLUTION=1024x600

# Keyboard Configuration
KEYBOARD_ENABLED=True  # Set to True to enable on-screen keyboard
KEYBOARD_TYPE=squeekboard  # Options: squeekboard, onboard
KEYBOARD_AUTO_POPUP=True  # Automatically show/hide keyboard on input focus

# Application Settings
DEBUG_MODE=False  # Set to False for production
LOG_LEVEL=INFO
BACKUP_INTERVAL=3600  # Backup database every hour (in seconds) 